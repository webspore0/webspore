---
const customInfo = "This is the contact page. Reach out to us for collaborations, support, or inquiries.";
---

<main class="ps-main">
  <div class="ps-window-bar">
    <span class="ps-dot red"></span>
    <span class="ps-dot yellow"></span>
    <span class="ps-dot green"></span>
  </div>
  <div class="ps-header">
    <span class="ps-logo">PS</span>
    <span class="ps-path">C:\Users\webspore&gt;</span>
  </div>
  <div class="ps-output">
    <pre>
{customInfo}

<a href="/about" tabindex="3" class="ps-link">about</a> &nbsp;
<a href="/port" tabindex="4" class="ps-link">portfolio</a> &nbsp;
<a href="/contact" tabindex="5" class="ps-link">contact</a>

PS C:\Users\webspore&gt; <span class="ps-input">_</span>
    </pre>
  </div>
</main>

<style>
body {
  background: #012456;
  color: #d7eaff;
  font-family: 'Cascadia Mono', 'Consolas', 'Courier New', monospace;
  font-size: 15px;
  margin: 0;
  min-height: 100vh;
}

.ps-main {
  max-width: 700px;
  margin: 4rem auto;
  background: #012456;
  border-radius: 10px;
  box-shadow: 0 0 24px #0008;
  padding: 2.5rem 2rem 2rem 2rem;
  border: 1.5px solid #003366;
  position: relative;
}

.ps-window-bar {
  display: flex;
  gap: 6px;
  margin-bottom: 0.7rem;
  height: 12px;
}
.ps-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  display: inline-block;
}
.ps-dot.red { background: #ff5f56; }
.ps-dot.yellow { background: #ffbd2e; }
.ps-dot.green { background: #27c93f; }

.ps-header {
  display: flex;
  align-items: center;
  font-size: 1.1rem;
  margin-bottom: 1.5rem;
}

.ps-logo {
  color: #00bcf2;
  font-weight: bold;
  margin-right: 0.5rem;
  font-size: 1.2rem;
}


</style>